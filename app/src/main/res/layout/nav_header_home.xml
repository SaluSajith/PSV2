<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:layout_gravity="center_horizontal"
    android:background="@color/dark_gray"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo1"
        android:layout_gravity="end"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_margin="@dimen/padding_large"
        android:orientation="horizontal">

        <com.hit.pretstreet.pretstreet.core.customview.CircularImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/logo1"
            android:id="@+id/iv_profile"
            android:layout_gravity="center"/>

        <com.hit.pretstreet.pretstreet.core.customview.TextViewPret
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:lines="2"
            android:layout_weight="1"
            android:id="@+id/tv_profile"
            android:text="@string/app_name"
            style="@style/textview_white_normal"
            app:pret_typeface="@string/font_redvelvet_regular"/>

        <com.hit.pretstreet.pretstreet.core.customview.CircularImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/logo1"
            android:id="@+id/iv_notification"
            android:layout_gravity="center"/>
        
        <com.hit.pretstreet.pretstreet.core.customview.NotificationBadge
            android:id="@+id/badge"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="-16dp"
            android:layout_marginTop="-8dp"
            app:nbBackground="@drawable/badge_bg_with_shadow"
            app:nbMaxTextLength="2"/>
    </LinearLayout>
</LinearLayout>
